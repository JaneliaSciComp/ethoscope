[Unit]
Description=Pysolovideo node server
Wants=ntpd.service clock.service
After=ntpd.service clock.service


[Service]
Type=simple
WorkingDirectory=/home/node/pySolo-Video/psvnode_server/psvnode/scripts/
ExecStart=/usr/bin/python2  /home/node/pySolo-Video/psvnode_server/psvnode/scripts/backup_tool.py
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target

